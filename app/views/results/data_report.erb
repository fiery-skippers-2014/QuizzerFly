<div id="content" class="main container-mid">
  <script src="Chart.js"></script>

  <!-- Survey Title -->
  <h1><%= @survey.title %></h1>
  <h3><%= @survey.description %></h3>
  <a href="/surveys/<%= @survey.id %>">Return to this survey</a>

    <!-- bullet points for questions -->
    <ul class="results_questions">
      <% @survey.questions.each do |question| %>
      <li><%= question.id %>. <%= question.question_text %><br>
        Answers:</li>
      <canvas id="myChart" width="200" height="200"></canvas>
      <% end %>
    </ul>
</div>

