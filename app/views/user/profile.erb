<!-- List of posts authored by user
      List of comments posted by user

      Option to create new post
      Option to create new comment
          -->
<div id="content" class="main container-mid">

<!-- This User's MAIN INFORMATION -->
  <div class="container-sml">
    <% @logged_in_user = current_user %>

    user: <%= @user.name %> | ID:<%= @user.id %><br>
    created: <%= @user.created_at %><br>
    email: <%= @user.email %><br>


<hr>



  <% if @logged_in_user %>
    <!-- This user can create their own survey -->
    <%= erb :'survey/_create_survey' %>
  <% end %>

  <br>

  <!-- This User's surveys -->
  <h3><%= @user.name %>'s Survey(s)</h3>
  <hr>
  <%= erb :'survey/_show_surveys', :layout => false, :locals => {:surveys => @surveys}  %>
  <br>

  <!-- Survey's this user has taken -->
  <h3>Survey(s) <%= @user.name %> has Taken</h3>
  <hr>
  <%= erb :'survey/_completed_surveys', :layout => false, :locals => {:surveys => @user.completed_surveys}  %>


</div>