<div id="content" class="main container-mid">

<p>Woohoo!! check this out!</p>

<% if @surveys %>
  <% for survey in @surveys %>

    <div class="post panel">
      <% @survey = survey %>
      <a href="/surveys/<%= survey.id %>"><%= survey.title %></a> by <%= survey.user.name %> |
      <span class="time"><%= survey.created_at.strftime("%H minutes ago") %></span><br>
      <%= survey.description %><br>

      <%= erb :_buttons, :layout => false, :locals => {:survey => @survey} %>

    </div>
  <% end %>
<% end %>


</div>